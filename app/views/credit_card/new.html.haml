%header.header
  = render partial: "partial/header"


.mainbox
  = render partial: 'users/side-contents'
  .l-content
    %section.l-content__container
      %h2.l-content__container__head クレジットカード情報入力
      %form.l-single{}
        %input{type: "hidden",}/
        .l-single__content
          .form-group
            %label カード番号
            %span.form-group__require 必須
            %input.input-default{placeholder: "半角数字のみ", type: "text", value: ""}/
            %ul.has-error-text
            %ul.form-group__card-list
              %li
                %img{alt: "", height: "20", src: "//www-mercari-jp.akamaized.net/assets/img/card/visa.svg?3897023084", width: "49"}/
              %li
                %img{alt: "", height: "20", src: "//www-mercari-jp.akamaized.net/assets/img/card/master-card.svg?3897023084", width: "34"}/
              %li
                %img{alt: "", height: "20", src: "//www-mercari-jp.akamaized.net/assets/img/card/saison-card.svg?3897023084", width: "30"}/
              %li
                %img{alt: "", height: "20", src: "//www-mercari-jp.akamaized.net/assets/img/card/jcb.svg?3897023084", width: "32"}/
              %li
                %img{alt: "", height: "20", src: "//www-mercari-jp.akamaized.net/assets/img/card/american_express.svg?3897023084", width: "21"}/
              %li
                %img{alt: "", height: "20", src: "//www-mercari-jp.akamaized.net/assets/img/card/dinersclub.svg?3897023084", width: "32"}/
              %li
                %img{alt: "", height: "20", src: "//www-mercari-jp.akamaized.net/assets/img/card/discover.svg?3897023084", width: "32"}/
          .expiration-date
            %label.expiration-date__name 有効期限
            %span.form-require 必須
            %br/
            .select-wrap
              %select.select-default
                %option{value: "01"} 01
                %option{value: "02"} 02
                %option{value: "03"} 03
                %option{value: "04"} 04
                %option{value: "05"} 05
                %option{value: "06"} 06
                %option{value: "07"} 07
                %option{value: "08"} 08
                %option{value: "09"} 09
                %option{value: "10"} 10
                %option{value: "11"} 11
                %option{value: "12"} 12
              / %i.fas.fa-chevron-down
            %span 月
            %ul#expire-mm-error-wrapper.has-error-text
            .select-wrap
              %select.select-default
                %option{value: "19"} 19
                %option{value: "20"} 20
                %option{value: "21"} 21
                %option{value: "22"} 22
                %option{value: "23"} 23
                %option{value: "24"} 24
                %option{value: "25"} 25
                %option{value: "26"} 26
                %option{value: "27"} 27
                %option{value: "28"} 28
                %option{value: "29"} 29
              / %i.fas.fa-chevron-down
            %span 年
            %ul#expire-yy-error-wrapper.has-error-text
          .form-group
            %label セキュリティコード
            %span.form-require 必須
            %input#payment_card_security_code.input-default{placeholder: "カード背面4桁もしくは3桁の番号", type: "number", value: ""}/
            %ul#security-code-error-wrapper.has-error-text
            .l-single__content__signup-seqcode
              .l-single__content__signup-seqcode__text{"data-js": "show-tips-toggle"}
                %span.form-question> ?
                カード裏面の番号とは？
              .signup-seqcode-info{"data-js": "show-tips-content"}
                %br/
          %button.l-single__content__btn-default{type: "button"} 追加する
