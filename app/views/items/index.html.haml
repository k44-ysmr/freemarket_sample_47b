-# ページタイトル
- content_for(:title) { 'メルカリ サンプル' }

/ ヘッダー
%header.header
  = render partial: "partial/header"
/ パンくずリスト
/ バナースライド

.swiper-container
  .swiper-wrapper
    .swiper-slide.slide
      = link_to '', '#', class: 'slide__ninety'
    .swiper-slide.slide
      = link_to '', '#', class: 'slide__newlife'
    .swiper-slide.slide
      .slide__main
        .slide__main--left
          %h2 スマホでかんたんフリマアプリ
          %p メルカリはスマホカメラからすぐに出品できる
          %p 購入時も安心な独自システムのアプリです
          .slide__main--left__icon
            = link_to '#' do
              = image_tag 'common/app-store.svg', alt: 'app-store-logo', class: 'banner__container--left__icon__app-store', height: '50', width: '170'
            = link_to '#' do
              = image_tag 'common/google-play.svg', alt: 'google-play-logo', class: 'banner__container--left__icon__google-play', height: '50', width: '170'
        = image_tag 'common/main_content_pc.png', alt: 'logo', class: 'slide__main--right', height: '390', width: '440'
    .swiper-slide.slide
      = link_to '', '#', class: 'slide__heisei'

  .swiper-pagination
  .swiper-button-prev
  .swiper-button-next
/ メインコンテンツ
%main.main
.pickup
  %h2.pickup-top ピックアップカテゴリー
  = render partial: 'partial/item-top',locals: { items: @ladies_items, word: "レディース" }
  = render partial: 'partial/item-top',locals: { items: @mens_items, word: "メンズ" }
  = render partial: 'partial/item-top',locals: { items: @kids_items, word: "ベビー・キッズ" }
  = render partial: 'partial/item-top',locals: { items: @cosme_items, word: "コスメ・香水・美容" }
.pickup
  %h2.pickup-top ピックアップブランド
  = render partial: 'partial/item-top',locals: { items: @chanel_items, word: "シャネル" }
  = render partial: 'partial/item-top',locals: { items: @louisvuitton_items, word: "ルイ・ヴィトン" }
  = render partial: 'partial/item-top',locals: { items: @supreme_items, word: "シュプリーム" }
  = render partial: 'partial/item-top',locals: { items: @nike_items, word: "ナイキ" }
/ バナー
.banner
  = render partial: "partial/banner"
