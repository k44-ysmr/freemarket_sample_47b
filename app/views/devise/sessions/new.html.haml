- content_for(:title) { 'ログイン - メルカリ サンプル' }
.devise-header
  = render partial: 'partial/devise-header'

.devise-main
  .devise-main__session
    .devise-main__session__registration
      %p.devise-main__session__registration__head アカウントをお持ちでない方はこちら
      =link_to '新規会員登録', new_user_registration_path, class: 'devise-main__session__registration__link'

    .devise-main__session__omniauth
      = link_to '', class: 'devise-main__session__omniauth__facebook' do
        %i.fab.fa-facebook
        Facebookでログイン
      = link_to '', class: 'devise-main__session__omniauth__google' do
        %i.fab.fa-google-plus-g
        Googleでログイン


    = form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'devise-main__session__form' }) do |f|
      .field
        = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス"
      .field
        = f.password_field :password, autocomplete: "current-password", placeholder: "パスワード"
      .field
        = f.check_box :remember_me
        = f.label :私はロボットではありません
      .actions
        = f.submit "ログイン"
      - if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
        = link_to 'パスワードをお忘れの方', new_user_password_path, class: 'devise-main__session__form__forgetting'

.devise-footer
  = render partial: 'partial/devise-footer'